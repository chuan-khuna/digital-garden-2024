---
import { buttonVariants } from '@/components/ui/button'
import ThemeToggle from '@/components/ThemeToggle.astro'
import { Button } from '@/components/ui/button'
import { Menu, X as Close } from 'lucide-react'
import { getCollection } from 'astro:content'
import Logo from '@/components/Logo.astro'

const navItems = await getCollection('navItems')
const sortedNavItems = navItems.sort((a, b) => a.data.order - b.data.order)

const blurryFullNav =
  'sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60'
const navItemClass = buttonVariants({ variant: 'ghost' })
---

<header class={`${blurryFullNav} print:hidden`}>
  <div
    class=`container flex h-16 items-center space-x-4 sm:justify-between sm:space-x-0 print:hidden`
  >
    <!-- Logo on the left -->
    <div class="fixed left-4 top-2 z-[5000] flex h-12 items-center">
      <a href="/" class="flex h-full items-center">
        <Logo />
      </a>
    </div>
    <nav
      class="fixed right-2 top-2 z-[5000] flex max-w-fit items-center justify-end space-x-2 rounded-full bg-transparent py-1 pl-2 pr-2 supports-[backdrop-filter]:bg-background/10"
    >
      <!-- desktop size nav -->
      <div id="desktop-nav" class="hidden md:flex">
        {
          sortedNavItems.map((item) => (
            <a href={item.data.link} class={`${navItemClass}`}>
              {item.data.label}
            </a>
          ))
        }
      </div>
      <!-- Vertical separator -->
      <div class="mx-2 hidden h-6 w-px bg-border md:block"></div>
      <ThemeToggle />
      <!-- mobile nav buttons -->
      <div id="mobile-nav-buttons" class="flex md:hidden">
        <Button variant="ghost" size="icon" id="mobile-nav">
          <Menu className="h-[1.5rem] w-[1.3rem]" id="nav-hamburger" />
          <Close className="hidden h-[1.5rem] w-[1.3rem]" id="nav-close" />
        </Button>
      </div>
    </nav>
  </div>

  <!-- mobile nav -->
  <!-- TODO: optional nav menu expands to 100% height w/ blur effect -->
  <div id="mobile-nav-container" class="hidden w-full">
    <div class="flex flex-col md:hidden">
      {
        sortedNavItems.map((item) => (
          <a href={item.data.link} class="mx-auto py-2">
            {item.data.label}
          </a>
        ))
      }
    </div>
  </div>
</header>

<script>
  const mobileNavContainer = document.getElementById('mobile-nav-container')
  const navButton = document.getElementById('mobile-nav')
  const hamburgerIcon = document.getElementById('nav-hamburger')
  const closeIcon = document.getElementById('nav-close')

  const handleNavClick = () => {
    hamburgerIcon.classList.toggle('hidden')
    closeIcon.classList.toggle('hidden')
    mobileNavContainer.classList.toggle('hidden')
  }

  navButton.addEventListener('click', handleNavClick)
</script>
