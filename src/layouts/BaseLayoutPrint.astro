---
// Hide header/footer in print mode

import '@/styles/global.css'

import HeadSEO from '@/components/seo/HeadSEO.astro'
import Footer from '@/components/Footer.astro'
import Nav from '@/components/Nav.astro'

interface Props {
  title?: string | undefined
  description?: string | undefined
}

const { title, description } = Astro.props
---

<html lang="en">
  <head>
    <HeadSEO title={title} description={description} />
    <!-- katex style sheet -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.15.2/dist/katex.min.css"
      integrity="sha384-MlJdn/WNKDGXveldHDdyRP1R4CTHr3FeuDNfhsLPYrq2t0UBkUdK2jyTnXPEK1NQ"
      crossorigin="anonymous"
    />
  </head>
  <body class="min-h-screen bg-background font-sans antialiased">
    <div class="relative flex min-h-screen flex-col">
      <!-- hide header -->
      <div class="print:hidden">
        <Nav />
      </div>

      <main class="flex-auto">
        <!-- remove padding and margin -->
        <section
          class="container grid items-center gap-6 px-2 pb-8 pt-6 md:py-10 print:gap-0 print:px-0 print:pb-0 print:pt-0"
        >
          <slot />
        </section>
      </main>

      <!-- hide footer -->
      <div class="print:hidden"><Footer /></div>
    </div>
  </body>
</html>
