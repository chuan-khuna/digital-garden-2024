---
import { getCollection, render } from 'astro:content'
import PostLayout from '@/layouts/PostLayout.astro'
import { getOutgoingNotes, getIncomingNotes } from '@/utils/bidirectional-link'

// Generate OG image URL for this post
const ogImageUrl = new URL(`og/posts/${Astro.params.slug}.png`, Astro.site)

export async function getStaticPaths() {
  const allPosts = await getCollection('posts')
  return allPosts.map((entry) => ({
    params: { slug: entry.id },
    props: { entry },
  }))
}

const { entry } = Astro.props
const { Content } = await render(entry)

const outgoingNoteTitles = getOutgoingNotes(entry)
const incomingNotes = await getIncomingNotes(entry)

// Fetch full note objects for outgoing notes
const allPosts = await getCollection('posts')
const outgoingNotes = allPosts.filter((post) => {
  return (
    outgoingNoteTitles.includes(post.data.title) ||
    outgoingNoteTitles.includes(post.id) ||
    post.data.aliases?.some((alias) => outgoingNoteTitles.includes(alias))
  )
})

// /posts/<slug>
const collectionRoot = 'posts'
---

<PostLayout
  frontmatter={entry.data}
  incomingNotes={incomingNotes}
  outgoingNotes={outgoingNotes}
  rootURL={collectionRoot}
  ogImage={ogImageUrl}
>
  <Content />
</PostLayout>
