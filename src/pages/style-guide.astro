---
import BaseLayout from '@/layouts/BaseLayout.astro'
import Color from '@/components/styleguide/color.astro'

// colour variable from `global.css` and `theme_<name>.css`
const colorGroups = [
  ['background', 'foreground'],
  ['card', 'card-foreground'],
  ['primary', 'primary-foreground'],
  ['secondary', 'secondary-foreground'],
  ['muted', 'muted-foreground'],
  ['accent', 'accent-foreground'],
  ['destructive', 'destructive-foreground'],
  ['border', 'input', 'ring'],
  [
    'theme-bg',
    'theme-link',
    'theme-text',
    'theme-accent',
    'theme-accent-2',
    'theme-quote',
  ],
]
---

<BaseLayout title="ALTR" description="">
  <main
    class="relative m-auto w-full max-w-6xl overflow-hidden p-2 sm:p-4 md:p-6"
  >
    <!-- colour group container -->
    <div
      class="flex flex-col gap-6 overflow-auto rounded-lg p-8 outline outline-cactus-text/20 dark:outline-cactus-text/20"
    >
      <!-- colour row -->

      {
        colorGroups.map((group) => (
          <div class="grid grid-cols-2 gap-3 sm:grid-cols-4 md:grid-cols-8">
            {group.map((variable) => (
              <Color cssValue={`hsl(var(--${variable}))`} name={variable} />
            ))}
          </div>
        ))
      }
    </div>
  </main>
</BaseLayout>
