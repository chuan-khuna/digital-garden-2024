---
import BaseLayout from '@/layouts/BaseLayout.astro'
import Color from '@/components/styleguide/color.astro'

// colour variable from `global.css` and `theme_<name>.css`

const colorGroups = [
  { name: 'Background', colors: ['background', 'foreground'] },
  { name: 'Card', colors: ['card', 'card-foreground'] },
  { name: 'Primary', colors: ['primary', 'primary-foreground'] },
  { name: 'Secondary', colors: ['secondary', 'secondary-foreground'] },
  { name: 'Muted', colors: ['muted', 'muted-foreground'] },
  { name: 'Accent', colors: ['accent', 'accent-foreground'] },
  { name: 'Destructive', colors: ['destructive', 'destructive-foreground'] },
  { name: 'Border', colors: ['border', 'input', 'ring'] },
  {
    name: 'Theme',
    colors: [
      'theme-bg',
      'theme-link',
      'theme-text',
      'theme-accent',
      'theme-accent-2',
      'theme-quote',
    ],
  },
]
---

<BaseLayout title="ALTR" description="">
  <main
    class="relative m-auto w-full max-w-6xl overflow-hidden p-2 sm:p-4 md:p-6"
  >
    <!-- colour group container -->
    <div
      class="flex flex-col gap-6 overflow-auto rounded-lg p-8 outline outline-cactus-text/40"
    >
      <!-- colour row -->

      {
        colorGroups.map((group) => (
          <div>
            <h3 class="mb-3 text-sm font-semibold text-gray-700 dark:text-gray-300">
              {group.name}
            </h3>
            <div class="grid grid-cols-2 gap-3 sm:grid-cols-4 md:grid-cols-8">
              {group.colors.map((variable) => (
                <Color cssValue={`hsl(var(--${variable}))`} name={variable} />
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </main>
</BaseLayout>
